<header id="navbar" role="banner" class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      {% if logo %}
        <a class="logo pull-left" href="{{ front_page }}" title="{{ 'Home'|t }}">
          <img src="{{ logo }}" alt="{{ 'Home'|t }}" />
        </a>
      {% endif %}

      {% if site_name %}
        <h1 id="site-name">
          <a href="{{ front_page }}" title="{{ 'Home'|t }}" class="brand">{{ site_name }}</a>
        </h1>
      {% endif %}

      {% if primary_nav or secondary_nav or page.navigation %}
        <div class="nav-collapse collapse">
          <nav role="navigation">
            {% if primary_nav %}
              {{ primary_nav }}
            {% endif %}
            {% if secondary_nav %}
              {{ secondary_nav }}
            {% endif %}
            {% if page.navigation %}
              {{ page.navigation }}
            {% endif %}
          </nav>
        </div>
      {% endif %}
    </div>
  </div>
</header>

<div class="main-container container">

  <header role="banner" id="page-header">
    {% if site_slogan %}
      <p class="lead">{{ site_slogan }}</p>
    {% endif %}

    {{ page.header }}
  </header> <!-- /#header -->

  <div class="row-fluid">

    {% if page.sidebar_first %}
      <aside class="span3" role="complementary">
        {{ page.sidebar_first }}
      </aside>  <!-- /#sidebar-first -->
    {% endif %}  
    <section class="{{ page.content_span }}">  
      {% if page.highlighted %}
        <div class="highlighted hero-unit">{{ page.highlighted }}</div>
      {% endif %}
      {% if breadcrumb %} {{ breadcrumb }} {% endif %}
      <a id="main-content"></a>
      {{ title_prefix }}
      {% if title %}
        <h1 class="page-header">{{ title }}</h1>
      {% endif %}
      {{ title_suffix }}
      {{ messages }}
      {% if tabs %}
        {{ tabs }}
      {% endif %}
      {% if page.help %}
        <div class="well">{{ page.help }}</div>
      {% endif %}
      {% if action_links %}
        <ul class="action-links">{{ action_links }}</ul>
      {% endif %}
      {{ page.content }}
    </section>

    {% if page.sidebar_second %}
      <aside class="span3" role="complementary">
        {{ page.sidebar_second }}
      </aside>  <!-- /#sidebar-second -->
    {% endif %}

  </div>
</div>
<footer class="footer container">
  {{ page.footer }}
</footer>
